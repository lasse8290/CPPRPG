    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-ID:\\Programs\\SDL2-2.0.9\\include",
                "-ID:\\Programs\\GLFW\\include",
                "-LD:Programs\\SDL2-2.0.9\\lib\\x64",
                "-LD:Programs\\GLFW",
                "-lSDL2main",
                "-lglfw3",
                "-lSDL2",
                "-lopengl32",
                "-lgdi32",
                "test-sdl"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
